import pyttsx3
import tkinter as tk
from tkinter import messagebox
if __name__ == "__main__":
    print("Welcome to Speak Robo!")
    print("Enter q to quit the program at any time.")
    
    while True:
        x = input("Enter the text you want to convert to speech: ")
        if x== "q":
            y = "Byee Byee Honeypie !!"
            engine = pyttsx3.init()
            engine.say(y)
            engine.runAndWait()
            break
        engine = pyttsx3.init()
        engine.say(x)
        engine.runAndWait()
       



